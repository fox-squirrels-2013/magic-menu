<div class="container">
  <h1>Welcome to Sage's!</h1>
  <p>Home of gruel, porridge, and hash</p>

  <div class="new_item"></div>

  <em>Create an item</em> 

  <form action="/items" method="post" id="submit-item">
		<input type="text"  name="item[name]" placeholder="Item Name" id="item-name">
		<input type="text"  name="item[price]" placeholder="Item Price" id="item-price">
		<input type="submit" value="Add Item">
	</form>

 
	<div class="new-item">
  	<h3>Your Items:</h3>
 	</div>
  	
	<div class="list_items">
  	<% @items.each do |item| %>
  		<div class="item">
  			<p> <%= item.name %> - $<%= item.price %></p>
  		</div>
  	<% end %>
  </div>
 
</div>

