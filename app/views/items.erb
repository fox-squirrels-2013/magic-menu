<form id="item_creator" action="/items" method="post">
  <input id="item_creator_1" type="text" name="name" placeholder="Item name">
  <input id="item_creator_2" type="text" name="price" placeholder="price">
  <input type="submit" value="Create Item">
  <% if @error_messages %>
    <% @error_messages.each do |message| %>
    <p class="error_message"><%= message %></p>
    <% end %>
  <% end %>  
</form>

<% if @error_messages %>
<% end %>

