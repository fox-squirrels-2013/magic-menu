<h1>Welcome to Awesome Menus</h1>
<h2>Add Items</h2>

<br />
<div class="row">
  <br />
  <%= erb :_errors, :layout => false %>
  <form id="form_items" action="/items/new" method ="post">
  <fieldset>
    <legend> Your items: </legend>
     <div class="large-4 columns">
        <label>Your item name</label>
        <input id="item_name_input" type="text" name="item[name]" placeholder="Here comes your item" >
        <input id="item_price_input" type="text" name="item[price]" placeholder="How much is the damage" >
        <input type="submit" value="Submit your item already"> 
     </div>
  </fieldset>
</form>

</div>

<div class="row">
  <h2> All items</h2>
    <div hidden class="messages"></div>
  <table id="all_items_list" >

  
<% @items.each do |item|%>
    <%= erb :'_list_item', :layout => false,  :locals => { :item =>item } %>

<% end %>    
  
  
  </table>
</div> 



