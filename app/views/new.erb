<div class="container">


<a href="/items" id="add_items">Add Items</a>
<h1> Welcome to Awesome Menus</h1> 
<form name="menu" id='menu_form' action='/menus' method='post'>
<input id="menuname" type='text' name='menu[name]' placeholder="menu name">
<input id="addmenu" type='submit' value='Add Menu'>

</form>

<h2>Your Menus:</h2>
<ul id="menulist">
<% @menus.each do |menu| %>

<%= erb(:_addmenu, :layout => false, :locals => {:menu => menu}) %>
<!-- <li><a href="/menus/<%=menu.id%>"> <%= menu.name %> </a></li> -->
<% end %>
</ul>

</div>
