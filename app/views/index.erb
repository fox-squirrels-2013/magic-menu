<div class="container">
  <h1>Welcome to Menu Emporium!</h1>


<form action = "/menu" method = "post">
  <input type="text" name="menu">
  <input type="submit" value="Setup your menu">
</form>


  <h3> Menus</h3>
    <%@menu_items.each do |menu| %>
    <a href = "menu/<%=menu.id %>"> <%= menu.description %></a> <br>
  <%end%>








